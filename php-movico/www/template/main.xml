<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<template>
	<css src="import.css"/>
	<div id="header">
		<div id="header-inner">
			<h1>T.T.C. Jevota Lanaken</h1>
			<ul id="nav">
				<li><renderLink view="index" value="Home"/></li>
				<li><renderLink view="news" value="Nieuws"/></li>
				<li><renderLink view="players" value="Leden"/></li>
				<li>
					<renderLink view="games" value="Wedstrijden">
						<param value="#{GamesBean.currentWeekNo}"/>
						<param value=""/>
					</renderLink>
				</li>
				<panelGroup rendered="#{LoginBean.admin}">
					<li><renderLink view="admin/clubs/overview" value="Admin" selectedPrefix="admin"/></li>
				</panelGroup>
			</ul>
		</div>
	</div>
	<div id="page">
		<ajaxLoading/>
		<div class="col wide">
			<insert name="body"/>
		</div>
		<div class="col small">
			<div>
				<h2>Login</h2>
				<div>
					<message/>
					<form rendered="#{!LoginBean.loggedIn}">
						<p>
							<outputLabel for="login-email" value="E-mailadres"/>
							<inputText id="login-email" value="#{LoginBean.emailAddress}" autoFocus="true"/>
						</p>
						<p>
							<outputLabel for="login-pass" value="Wachtwoord"/>
							<inputSecret id="login-pass" value="#{LoginBean.password}"/>
						</p>
						<p>
							<commandButton action="#{LoginBean.login}" value="Inloggen"/>
						</p>
					</form>
					<form rendered="#{LoginBean.loggedIn}">
						<p><outputText value="Welkom, #{LoginBean.player.fullName}!"/></p>
						<panelGroup rendered="#{LoginBean.admin}">
							<p>
								<renderLink view="admin/clubs/overview" value="Controlepaneel"/>
							</p>
						</panelGroup>
						<p>
							<commandButton action="#{LoginBean.logout}" value="Uitloggen"/>
						</p>
					</form>
				</div>
			</div>
			<div>
				<h2>Contact</h2>
				<div>
					<p class="club-address">
						<span>T.T.C. Jevota Lanaken</span>
						<span>Biesweg 16</span>
						<span>3620 Gellik</span>
					</p>
					<p class="club-contact">
						<span>T 089/71.45.35</span>
						<span>E info@jevota.be</span>
					</p>
					<form>
						<p id="contact-link">
							<renderLink value="Meer informatie" view="club_details">
								<param value="#{ApplicationConstants.jevotaClubId}"/>
							</renderLink>
						</p>
					</form>
				</div>
			</div>
		</div>
		<div class="clear"></div>
	</div>
	<div id="footer">
		<p>
			Ontwikkeld door The Web Factory.
		</p>
	</div>
</template>
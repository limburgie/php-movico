<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<template>
	<css src="import.css"/>
	<div id="gradient"></div>
	<div id="wrapper">
		<h1>T.T.C. Jevota</h1>
		<form>
			<ul id="nav">
				<li><commandLink action="index" value="Home" link="true"/></li>
				<panelGroup rendered="#{LoginBean.admin}">
					<li>
						<p>Controlepaneel</p>
						<ul>
							<li><commandLink action="admin/clubs/overview" value="Clubbeheer" link="true"/></li>
							<li><commandLink action="admin/games/overview" value="Wedstrijdbeheer" link="true"/></li>
						</ul>
					</li>
				</panelGroup>
			</ul>
		</form>
		<div id="main">
			<div class="col wide">
				<message/>
				<insert name="body"/>
			</div>
			<div class="col small">
				<div>
					<h2>Lid worden?</h2>
					<div>
						<p>
						Wil je lid worden van T.T.C. Jevota?
						Neem dan vandaag nog contact met ons op!
						</p>
						<div id="form-button">
							Word lid
						</div>
					</div>
				</div>
				<div>
					<h2>Login</h2>
					<div>
						<form rendered="#{!LoginBean.loggedIn}">
							<p>
								<outputLabel for="email" value="E-mailadres"/>
								<inputText id="email" value="#{LoginBean.emailAddress}" autoFocus="true"/>
							</p>
							<p>
								<outputLabel for="pass" value="Wachtwoord"/>
								<inputSecret id="pass" value="#{LoginBean.password}"/>
							</p>
							<p>
								<commandButton action="#{LoginBean.login}" value="Inloggen"/>
							</p>
						</form>
						<form rendered="#{LoginBean.loggedIn}">
							<p><outputText value="Welkom, #{LoginBean.account.emailAddress}"/></p>
							<panelGroup rendered="#{LoginBean.admin}">
								<p>
									<commandLink action="admin/clubs/overview" value="Controlepaneel"/>
								</p>
							</panelGroup>
							<p>
								<commandButton action="#{LoginBean.logout}" value="Uitloggen"/>
							</p>
						</form>
					</div>
				</div>
				<div><h2>Contact</h2></div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="clear"></div>
	</div>
</template>
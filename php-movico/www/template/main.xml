<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<template>
	<css src="import.css"/>
	<div id="gradient"></div>
	<div id="wrapper">
		<h1>T.T.C. Jevota Lanaken</h1>
		<form id="nav-form">
			<ul id="nav">
				<li><commandLink action="index" value="Home" link="true"/></li>
				<panelGroup rendered="#{LoginBean.admin}">
					<li><commandLink action="admin/clubs/overview" value="Admin" link="true"/></li>
				</panelGroup>
			</ul>
			<ajaxLoading/>
		</form>
		<img id="logo" src="jevota-small.png"/>
		<div id="border-main">
			<div id="main">
				<div id="layout">
					<div class="col wide">
						<message/>
						<insert name="body"/>
					</div>
					<div class="col small">
						<div>
							<div id="form-button">
								Word lid
							</div>
						</div>
						<div>
							<h2>Login</h2>
							<div>
								<form rendered="#{!LoginBean.loggedIn}">
									<p>
										<outputLabel for="login-email" value="E-mailadres"/>
										<inputText id="login-email" value="#{LoginBean.emailAddress}" autoFocus="true"/>
									</p>
									<p>
										<outputLabel for="login-pass" value="Wachtwoord"/>
										<inputSecret id="login-pass" value="#{LoginBean.password}"/>
									</p>
									<p>
										<commandButton action="#{LoginBean.login}" value="Inloggen"/>
									</p>
								</form>
								<form rendered="#{LoginBean.loggedIn}">
									<p><outputText value="Welkom, #{LoginBean.account.emailAddress}"/></p>
									<panelGroup rendered="#{LoginBean.admin}">
										<p>
											<commandLink action="admin/clubs/overview" value="Controlepaneel" link="true"/>
										</p>
									</panelGroup>
									<p>
										<commandButton action="#{LoginBean.logout}" value="Uitloggen"/>
									</p>
								</form>
							</div>
						</div>
						<div>
							<h2>Contact</h2>
							<div>
								<p class="club-address">
									<span>T.T.C. Jevota Lanaken</span>
									<span>Biesweg 16</span>
									<span>3620 Gellik</span>
								</p>
								<p class="club-contact">
									<span>T 089/71.45.35</span>
									<span>E info@jevota.be</span>
								</p>
								<form>
									<p id="contact-link">
											<commandLink value="Meer informatie" action="contact" link="true"/>
									</p>
								</form>
							</div>
						</div>
					</div>
					<div class="clear"></div>
				</div>
			</div>
		</div>
	</div>
</template>
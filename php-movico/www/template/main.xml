<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="parent">
	<define name="main">
		<div class="col wide">
			<insert name="body"/>
		</div>
		<div class="col small">
			<div>
				<h2>Login</h2>
				<div>
					<message/>
					<form rendered="#{!LoginBean.loggedIn}">
						<p>
							<div class="msg info">
								<renderLink view="request" value="Zelf kunnen inloggen? Klik hier!"/>
							</div>
						</p>
						<p>
							<outputLabel for="login-email" value="E-mailadres"/>
							<inputText id="login-email" value="#{LoginBean.emailAddress}" autoFocus="true"/>
						</p>
						<p>
							<outputLabel for="login-pass" value="Wachtwoord"/>
							<inputSecret id="login-pass" value="#{LoginBean.password}"/>
						</p>
						<p>
							<commandButton action="#{LoginBean.login}" value="Inloggen"/>
						</p>
					</form>
					<form rendered="#{LoginBean.loggedIn}">
						<p><outputText value="Welkom, #{LoginBean.player.fullName}!"/></p>
						<panelGroup rendered="#{LoginBean.specialUser}">
							<p>
								<renderLink view="admin/index" value="Controlepaneel"/>
							</p>
						</panelGroup>
						<p>
							<commandButton action="#{LoginBean.logout}" value="Uitloggen"/>
						</p>
					</form>
				</div>
			</div>
			<insert name="side"/>
			<div>
				<h2>Contact</h2>
				<div>
					<p class="club-address">
						<span>T.T.C. Jevota Lanaken</span>
						<span>Biesweg 16</span>
						<span>3620 Gellik</span>
					</p>
					<p class="club-contact">
						<span>089/71.45.35</span>
						<outputEmail value="info@jevota.be"/>
					</p>
					<form>
						<p id="contact-link">
							<renderLink value="Meer informatie" view="club">
								<param value="#{ApplicationConstants.jevotaClubId}"/>
							</renderLink>
						</p>
					</form>
				</div>
			</div>
		</div>
		<div class="clear"></div>
	</define>
</composition>
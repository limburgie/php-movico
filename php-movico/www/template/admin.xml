<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<template>
	<css src="import.css"/>
	<div id="gradient"></div>
	<div id="wrapper">
		<h1>T.T.C. Jevota Lanaken</h1>
		<form id="nav-form">
			<ul id="nav">
				<li><renderLink view="index" value="Home" selectedPrefix="index"/></li>
				<panelGroup rendered="#{LoginBean.admin}">
					<li><renderLink view="admin/clubs/overview" value="Admin" selectedPrefix="admin"/></li>
				</panelGroup>
			</ul>
			<ajaxLoading/>
		</form>
		<img id="logo" src="jevota-small.png"/>
		<div id="border-main">
			<div id="main">
				<div id="layout">
					<panelGroup rendered="#{LoginBean.admin}">
						<div class="col very-small">
							<form>
								<ul>
									<li><renderLink view="admin/players/overview" value="Spelers"/></li>
									<li><renderLink view="admin/clubs/overview" value="Clubs"/></li>
									<li><renderLink view="admin/games/overview" value="Wedstrijden"/></li>
								</ul>
							</form>
						</div>
						<div class="col very-wide">
							<message/>
							<insert name="body"/>
						</div>
						<div class="clear"></div>
					</panelGroup>
					<panelGroup rendered="!#{LoginBean.admin}">
						<p>Je hebt niet genoeg rechten om deze pagina te bekijken.</p>
					</panelGroup>
				</div>
			</div>
		</div>
	</div>
</template>
<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<template>
	<css src="import.css"/>
	<div id="header">
		<div id="header-inner">
			<h1>T.T.C. Jevota Lanaken</h1>
			<ul id="nav">
				<li><renderLink view="index" value="Home"/></li>
				<li><renderLink view="news" value="Nieuws"/></li>
				<li><renderLink view="players" value="Leden"/></li>
				<li>
					<renderLink view="games" value="Wedstrijden">
						<param value="#{GamesBean.currentWeekNo}"/>
						<param value="-"/>
					</renderLink>
				</li>
				<panelGroup rendered="#{LoginBean.specialUser}">
					<li><renderLink view="admin/index" value="Admin" selectedPrefix="admin"/></li>
				</panelGroup>
			</ul>
		</div>
	</div>
	<div id="page">
		<ajaxLoading/>
		<panelGroup rendered="#{LoginBean.specialUser}">
			<ul id="subnav">
				<panelGroup rendered="#{LoginBean.newsManager}">
					<li><renderLink view="admin/news/overview" value="Nieuws" selectedPrefix="admin/news"/></li>
				</panelGroup>
				<panelGroup rendered="#{LoginBean.playerManager}">
					<li><renderLink view="admin/players/overview" value="Leden" selectedPrefix="admin/players"/></li>
				</panelGroup>
				<panelGroup rendered="#{LoginBean.clubManager}">
					<li><renderLink view="admin/clubs/overview" value="Clubs" selectedPrefix="admin/clubs"/></li>
				</panelGroup>
				<panelGroup rendered="#{LoginBean.gameManager}">
					<li><renderLink view="admin/games/overview" value="Wedstrijden" selectedPrefix="admin/games"/></li>
				</panelGroup>
				<panelGroup rendered="#{LoginBean.admin}">
					<li><renderLink view="admin/roles/overview" value="Rollen" selectedPrefix="admin/roles"/></li>
				</panelGroup>
			</ul>
			<div class="col">
				<div>
					<h2><insert name="title"/></h2>
					<div>
						<message/>
						<insert name="body"/>
					</div>
				</div>
			</div>
		</panelGroup>
		<panelGroup rendered="!#{LoginBean.specialUser}">
			<p>Je hebt niet genoeg rechten om deze pagina te bekijken.</p>
		</panelGroup>
	</div>
	<div id="footer">
		<p>Ontwikkeld door The Web Factory.</p>
	</div>
</template>
<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "../../lib/component/dtd/view.dtd">
<view>
	<css src="test.css"/>
	<message/>
    <form>
    	<panelGrid columns="2">
	    	<outputLabel for="firstName" value="Voornaam"/>
	    	<inputText id="firstName" value="#{UserBean.firstName}"/>
	    	<outputLabel for="lastName" value="Achternaam"/>
	    	<inputText id="lastName" value="#{UserBean.lastName}"/>
	    	<outputText value=""/>
	    	<booleanCheckbox value="#{UserBean.default}" label="Is default user?"/>
	    	<inputHidden value="#{UserBean.id}"/>
	    	<inputHidden value="#{UserBean.editMode}"/>
	    	<commandButton action="#{UserBean.save}" value="Opslaan"/>
	    	<commandButton action="#{UserBean.back}" value="Terug"/>
    	</panelGrid>
    </form>
</view>
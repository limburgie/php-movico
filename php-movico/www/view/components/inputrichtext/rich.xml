<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main">
	<define name="title">
		<outputText value="Input Rich Text"/>
	</define>
	<define name="body">
	    <form>
	        <inputRichText value="#{RichTextBean.value}" height="150" width="400" toolbar="tiny"/>
	        <p><commandButton action="#{RichTextBean.submit}" value="Submit"/></p>
	    </form>
	    <div>
	    	<outputText value="#{RichTextBean.value}"/>
	    </div>
	</define>
</composition>
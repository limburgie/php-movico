<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main">
	<define name="title">
		<outputText value="DataTable"/>
	</define>
	<define name="body">
		<message/>
		<form>
			<dataTable id="countries" value="#{PaginationBean.countries}" var="country" rows="2" pagination="true">
				<column>
					<colHeader>
						<outputText value="Country"/>
					</colHeader>
					<outputText value="#{country}"/>
				</column>
			</dataTable>
		</form>
	</define>
</composition>
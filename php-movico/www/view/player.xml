<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main" title="#{PlayerBean.player.fullName}">
	<define name="body">
		<div>
			<h2><outputText value="#{PlayerBean.player.fullName}"/></h2>
			<div>
				<ul>
					<li><outputText value="Lidnummer: "/><outputText value="#{PlayerBean.player.memberNo}"/></li>
					<li><outputText value="Klassement: "/><outputText value="#{PlayerBean.player.ranking}"/></li>
					<panelGroup rendered="#{LoginBean.loggedIn}">
						<li><outputText value="Telefoonnr: "/><outputText value="#{PlayerBean.player.phone}"/></li>
						<li><outputText value="GSM-nr: "/><outputText value="#{PlayerBean.player.mobile}"/></li>
						<li><outputText value="Adres: "/><outputText value="#{PlayerBean.player.address}"/></li>
					</panelGroup>
				</ul>
			</div>
		</div>
	</define>
</composition>
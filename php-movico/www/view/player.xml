<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main" title="#{PlayerBean.player.fullName}">
	<define name="body">
		<div>
			<h2><outputText value="#{PlayerBean.player.fullName}"/></h2>
			<div>
				<panelGrid columns="2" columnClasses="table-label,bold">
					<outputText value="Lidnummer"/>
					<outputText value="#{PlayerBean.player.memberNo}"/>
					
					<outputText value="Klassement"/>
					<outputText value="#{PlayerBean.player.ranking}"/>
				</panelGrid>
				<panelGroup rendered="#{LoginBean.loggedIn}">
					<h3>Contactgegevens</h3>
					<panelGrid columns="2" columnClasses="table-label,bold">
						<outputText value="Tel"/><outputText value="#{PlayerBean.player.phone}"/>
						<outputText value="Gsm"/><outputText value="#{PlayerBean.player.mobile}"/>
						<outputText value="Adres"/><outputText value="#{PlayerBean.player.address}"/>
					</panelGrid>
					<googleMap address="#{PlayerBean.player.address}"/>
				</panelGroup>
			</div>
		</div>
	</define>
</composition>
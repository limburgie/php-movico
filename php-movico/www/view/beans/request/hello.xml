<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main">
	<define name="title">
		<outputText value="HelloBean (request scope)"/>
	</define>
	<define name="body">
		<p>Fill in your name and press the button. Your name will be printed below.</p>
	    <form>
	    	<inputText value="#{HelloBean.name}"/>
	        <commandButton action="#{HelloBean.sayHello}" value="Say Hello!"/>
	    </form>
	    <p><outputText value="#{HelloBean.message}"/></p>
	</define>
</composition>
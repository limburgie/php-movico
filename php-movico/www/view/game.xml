<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main" title="Wedstrijdinfo #{GameDetailsBean.game.homeTeamStr}-#{GameDetailsBean.game.outTeamStr}">
	<define name="body">
		<div>
			<h2>Wedstrijdinformatie</h2>
			<div>
				<panelGrid columns="3">
					<panelGroup>
						<h3><outputText value="#{GameDetailsBean.game.homeTeamStr}"/></h3>
						<dataTable var="player" value="#{GameDetailsBean.game.homeParticipants}" rendered="#{GameDetailsBean.game.homeTeamLanaken}">
							<column>
								<outputText value="#{player.fullName}"/>
							</column>
						</dataTable>
					</panelGroup>
					<h3><outputText class="game-score" value="#{GameDetailsBean.game.homeTeamPts} - #{GameDetailsBean.game.outTeamPts}"/></h3>
					<panelGroup>
						<h3><outputText value="#{GameDetailsBean.game.outTeamStr}"/></h3>
						<dataTable var="player" value="#{GameDetailsBean.game.outParticipants}" rendered="#{GameDetailsBean.game.outTeamLanaken}">
							<column>
								<outputText value="#{player.fullName}"/>
							</column>
						</dataTable>
					</panelGroup>
				</panelGrid>
				<panelGroup rendered="#{GameDetailsBean.game.hasReview}">
					<h3>Wedstrijdverslag</h3>
					<p><outputText value="#{GameDetailsBean.game.review}"/></p>
				</panelGroup>
				<panelGroup rendered="#{LoginBean.gameManager}">
					<p>
						<renderLink view="admin/games/edit" value="Aanpassen">
							<param value="#{GameDetailsBean.game.gameId}"/>
							<param value="games"/>
						</renderLink>
					</p>
				</panelGroup>
			</div>
		</div>
	</define>
	<define name="side">
	
	</define>
</composition>
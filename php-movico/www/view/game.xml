<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main" title="Wedstrijdinfo #{GameDetailsBean.game.homeTeamStr}-#{GameDetailsBean.game.outTeamStr}">
	<define name="body">
		<div>
			<h2>Wedstrijdinformatie</h2>
			<div>
				<p>
					<h3>
						<outputText value="#{GameDetailsBean.game.homeTeamStr}"/>
						<outputText class="game-score" value="#{GameDetailsBean.game.homeTeamPts} - #{GameDetailsBean.game.outTeamPts}"/>
						<outputText value="#{GameDetailsBean.game.outTeamStr}"/>
					</h3>
				</p>
				<p>
					<outputText class="label" value="Wedstrijdverslag: "/>
					<outputText value="#{GameDetailsBean.game.review}" rendered="#{GameDetailsBean.game.hasReview}"/>
					
					<panelGroup rendered="#{!GameDetailsBean.game.hasReview}">
						<outputText value="Er is nog geen verslag toegevoegd voor deze wedstrijd"/>
						<renderLink view="admin/games/edit" value="Wees de eerste!" rendered="#{LoginBean.admin}"/>
					</panelGroup>
				</p>
				<panelGroup rendered="#{LoginBean.gameManager}">
					<p>
						<renderLink view="admin/games/edit" value="Aanpassen">
							<param value="#{GameDetailsBean.game.gameId}"/>
							<param value="games"/>
						</renderLink>
					</p>
				</panelGroup>
			</div>
		</div>
	</define>
	<define name="side">
	
	</define>
</composition>
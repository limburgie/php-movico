<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main">
	<define name="body">
		<div>
			<h2>Ledenoverzicht</h2>
			<div>
				<dataTable value="#{PlayerOverviewBean.players}" var="player">
					<column class="r">
						<colHeader class="r">
							<outputText value="Nr"/>
						</colHeader>
						<outputText value="#{player.referenceNo}"/>
					</column>
					<column class="r">
						<colHeader class="r">
							<outputText value="Index"/>
						</colHeader>
						<outputText value="#{player.index}"/>
					</column>
					<column class="c">
						<colHeader class="c">
							<outputText value="Lidnr."/>
						</colHeader>
						<outputText value="#{player.memberNoString}"/>
					</column>
					<column>
						<colHeader class="l">
							<outputText value="Achternaam"/>
						</colHeader>
						<renderLink view="player" value="#{player.lastName}">
							<param value="#{player.playerId}"/>
						</renderLink>
					</column>
					<column>
						<colHeader class="l">
							<outputText value="Voornaam"/>
						</colHeader>
						<renderLink view="player" value="#{player.firstName}">
							<param value="#{player.playerId}"/>
						</renderLink>
					</column>
					<column class="c">
						<colHeader>
							<outputText value="Rank."/>
						</colHeader>
						<outputText value="#{player.ranking}"/>
					</column>
					<column class="c">
						<colHeader>
							<outputText value="Rec."/>
						</colHeader>
						<outputText value="#{player.recString}"/>
					</column>
					<column>
						<renderLink view="admin/players/edit" rendered="#{LoginBean.playerManager}">
							<param value="#{player.playerId}"/>
							<param value="players"/>
							<img src="edit.png"/>
						</renderLink>
					</column>
				</dataTable>
			</div>
		</div>
	</define>
</composition>
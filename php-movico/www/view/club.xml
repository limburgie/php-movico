<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main" title="Clubgegevens #{ClubDetailsBean.club.shortName}">
	<define name="body">
		<div>
			<h2><outputText value="#{ClubDetailsBean.club.name}"/></h2>
			<div>
				<panelGroup rendered="#{ClubDetailsBean.club.lanaken}">
					<h3>Openingsuren</h3>
					<ul>
						<li>Di: 18u30 - 24u00</li>
						<li>Wo: 19u00 - 24u00</li>
						<li>Do: 10u00 - 12u00 en 19u00 - 24u00</li>
						<li>Za: 10u00 - 12u00 en vanaf 18u00</li>
					</ul>
					<h3>Trainingen</h3>
					<ul>
						<li><span>Beginnelingen (o.l.v. Michael Boelen)</span>
							<ul>
								<li>Di: 18u30-20u00</li>
								<li>Za: 10u00-11u30</li>
							</ul>
						</li>
						<li><span>Gevorderden (o.l.v. Michael Boelen, Bart Franssen, Jeroen Mertens)</span>
							<ul>
								<li>Di: 20u00-21u30</li>
								<li>Do: 19u00-20u30</li>
							</ul>
						</li>
						<li><span>Senioren 50+ (o.l.v. Guido Dreesen)</span>
							<ul>
								<li>Do: 10u00-12u00</li>
							</ul>
						</li>
					</ul>
					<h3>Contact</h3>
				</panelGroup>
				<p class="club-address">
					<outputText value="#{ClubDetailsBean.club.name} (#{ClubDetailsBean.club.fullNumber})"/>
					<outputText value="#{ClubDetailsBean.club.building}" rendered="#{ClubDetailsBean.club.hasBuilding}"/>
					<outputText value="#{ClubDetailsBean.club.street}"/>
					<outputText value="#{ClubDetailsBean.club.place}"/>
				</p>
				<p class="club-contact">
					<outputText value="T #{ClubDetailsBean.club.phone}" rendered="#{ClubDetailsBean.club.hasPhone}"/>
				</p>
				<googleMap address="#{ClubDetailsBean.club.address}" height="300" width="400" zoomLevel="12"/>
			</div>
		</div>
	</define>
</composition>
<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="admin">
	<define name="body">
		<div>
			<h2>Clubbeheer - Maak nieuwe club</h2>
			<div>
				<form>
					<p>
						<outputLabel for="club-number" value="Stamnummer"/>
						<span>LK</span>
						<inputText maxLength="3" id="club-number" value="#{ManageClubsBean.selected.number}" autoFocus="true"/>
					</p>
					<p>
						<outputLabel for="club-shortname" value="Korte naam (bv. Bree)"/>
						<inputText maxLength="20" id="club-short-name" value="#{ManageClubsBean.selected.shortName}"/>
					</p>
					<p>
						<outputLabel for="club-name" value="Naam (bv. T.T.C. Meteor Bree)"/>
						<inputText maxLength="30" id="club-name" value="#{ManageClubsBean.selected.name}"/>
					</p>
					<p>
						<outputLabel for="club-address" value="Adres (bv. Groenstraat 20, 3650 Dilsen-Stokkem)"/>
						<inputText maxLength="100" id="club-address" value="#{ManageClubsBean.selected.address}"/>
					</p>
					<p>
						<outputLabel for="club-distance" value="Afstand (in km)"/>
						<inputText maxLength="3" id="club-distance" value="#{ManageClubsBean.selected.distance}"/>	
					</p>
					<p>
						<outputLabel for="club-phone" value="Telefoonnummer"/>
						<inputText maxLength="20" id="club-phone" value="#{ManageClubsBean.selected.phone}"/>	
					</p>
					<p>
						<commandButton action="#{ManageClubsBean.create}" value="Opslaan"/>
					</p>
				</form>
			</div>
		</div>
	</define>
</composition>
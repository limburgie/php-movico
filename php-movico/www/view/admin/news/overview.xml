<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="admin">
	<define name="title">
		<span>Nieuwsbeheer</span>
	</define>
	<define name="body">
		<panelGroup rendered="#{LoginBean.newsManager}">
		<form>
			<p>
				<commandButton action="admin/news/new" value="Maak nieuw item"/>
			</p>
			<dataTable value="#{ManageNewsBean.items}" var="item">
				<column>
					<colHeader>
						<outputText value="Datum"/>
					</colHeader>
					<outputDate value="#{item.date}" format="#{ApplicationConstants.dateTimeFormat}"/>
				</column>
				<column>
					<colHeader>
						<outputText value="Titel"/>
					</colHeader>
					<outputText value="#{item.title}"/>
				</column>
				<column>
					<colHeader>
						<outputText value="Schrijver"/>
					</colHeader>
					<outputText value="#{item.creator.fullName}"/>
				</column>
				<column>
					<renderLink view="admin/news/edit">
						<param value="#{item.itemId}"/>
						<img src="edit.png"/>
					</renderLink>
				</column>
				<column>
					<commandButton action="#{ManageNewsBean.delete}" value="X" popup="Weet je zeker dat je dit nieuws verwijdert?">
						<param value="#{item.itemId}"/>
					</commandButton>
				</column>
			</dataTable>
		</form>
		</panelGroup>
	</define>
</composition>
<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main">
	<define name="body">
		<div>
			<h2>Wedstrijdbeheer - Maak nieuwe wedstrijd</h2>
			<div>
				<form>
					<p>
						<outputLabel for="date" value="Datum (dd-mm-yy)"/>
						<inputText id="date" value="#{ManageGamesBean.date}" autoFocus="true"/>
					</p>
					<p>
						<outputLabel for="jevota" value="Jevota Team"/>
						<selectOneMenu value="#{ManageGamesBean.jevotaTeamNo}" options="#{ManageGamesBean.teamNos}"/>
					</p>
					<p>
						<outputLabel for="opponent" value="Tegenstander"/>
						<selectOneMenu value="#{ManageGamesBean.oppClub}" options="#{ManageGamesBean.clubs}"/>
						<selectOneMenu value="#{ManageGamesBean.oppTeamNo}" options="#{ManageGamesBean.teamNos}"/>
					</p>
					<p>
						<outputLabel for="location" value="Thuis"/>
						<booleanCheckbox value="#{ManageGamesBean.home}"/>
					</p>
					<p>
						<commandButton action="#{ManageGamesBean.create}" value="Opslaan"/>
					</p>
				</form>
			</div>
		</div>
	</define>
</composition>
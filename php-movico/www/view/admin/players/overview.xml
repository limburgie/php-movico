<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="admin">
	<define name="body">
		<div>
			<h2>Spelerbeheer - Overzicht</h2>
			<div>
				<form>
					<p>
						<commandButton action="admin/players/new" value="Maak nieuwe speler"/>
					</p>
					<dataTable value="#{ManagePlayersBean.players}" var="player">
						<column>
							<colHeader>
								<outputText value="Naam"/>
							</colHeader>
							<outputText value="#{player.fullName}"/>
						</column>
						<column>
							<commandButton action="#{ManagePlayersBean.edit}" value="Wijzigen">
								<param value="#{player.playerId}"/>
							</commandButton>
						</column>
						<column>
							<commandButton action="#{ManagePlayersBean.delete}" value="X" popup="Weet je zeker dat je deze speler verwijdert?">
								<param value="#{player.playerId}"/>
							</commandButton>
						</column>
					</dataTable>
				</form>
			</div>
		</div>
	</define>
</composition>
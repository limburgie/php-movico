<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="admin">
	<define name="title">
		<span>Ledenbeheer - Overzicht</span>
	</define>
	<define name="body">
		<panelGroup rendered="#{LoginBean.playerManager}">
		<form>
			<p>
				<commandButton action="admin/players/new" value="Maak nieuw lid"/>
				<!--  
				<commandButton action="admin/players/passgen" value="Genereer wachtwoorden"/>
				-->
			</p>
			<dataTable value="#{ManagePlayersBean.players}" var="player">
				<column>
					<colHeader>
						<outputText value="Lidnr."/>
					</colHeader>
					<outputText value="#{player.memberNo}"/>
				</column>
				<column>
					<colHeader>
						<outputText value="Naam"/>
					</colHeader>
					<outputText value="#{player.fullName}"/>
				</column>
				<column class="c">
					<colHeader>
						<outputText value="Rank."/>
					</colHeader>
					<outputText value="#{player.ranking}"/>
				</column>
				<column class="c">
					<colHeader>
						<outputText value="Rec."/>
					</colHeader>
					<outputText value="#{player.recString}"/>
				</column>
				<column class="c">
					<colHeader>
						<outputText value="Act."/>
					</colHeader>
					<outputText value="#{player.activeString}"/>
				</column>
				<column class="c">
					<colHeader>
						<outputText value="Tel"/>
					</colHeader>
					<outputText value="#{player.hasPhoneStr}"/>
				</column>
				<column class="c">
					<colHeader>
						<outputText value="Gsm"/>
					</colHeader>
					<outputText value="#{player.hasMobileStr}"/>
				</column>
				<column class="c">
					<colHeader>
						<outputText value="Mail"/>
					</colHeader>
					<outputText value="#{player.hasEmailStr}"/>
				</column>
				<column class="c">
					<colHeader>
						<outputText value="Adres"/>
					</colHeader>
					<outputText value="#{player.hasAddressStr}"/>
				</column>
				<column>
					<renderLink view="admin/players/edit">
						<param value="#{player.playerId}"/>
						<img src="edit.png"/>
					</renderLink>
				</column>
				<column>
					<commandButton action="#{ManagePlayersBean.delete}" value="X" popup="Weet je zeker dat je dit lid verwijdert?">
						<param value="#{player.playerId}"/>
					</commandButton>
				</column>
			</dataTable>
		</form>
		</panelGroup>
	</define>
</composition>
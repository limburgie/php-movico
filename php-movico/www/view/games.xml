<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main" title="Wedstrijdoverzicht" description="Overzicht van voorbije en aankomende wedstrijden van T.T.C. Jevota.">
	<define name="body">
		<div>
			<h2>Wedstrijden</h2>
			<div>
				<p class="left">Filter op</p>
				<form class="left filter">
					<p>
						<outputLabel for="filterByWeek" value="week"/>
						<selectOneMenu id="filterByWeek" value="#{GamesBean.filterByWeek}" options="#{GamesBean.weeks}" action="#{GamesBean.filter}" addEmptyOption="true"/>
					</p>
				</form>
				<p class="left">of</p>
				<form class="left filter">
					<p>
						<outputLabel for="filterByTeam" value="team"/>
						<selectOneMenu id="filterByTeam" value="#{GamesBean.filterByTeam}" options="#{GamesBean.teams}" action="#{GamesBean.filter}" addEmptyOption="true"/>
					</p>
				</form>
				<!--  
				<p class="left">voor</p>
				<form class="left filter">
					<p>
						<outputLabel for="filterBySeason" value="seizoen"/>
						<selectOneMenu id="filterBySeason" value="#{GamesBean.filterBySeason}" options="#{GamesBean.seasons}" action="#{GamesBean.filter}" addEmptyOption="false"/>
					</p>
				</form>
				-->
				<div class="clear"/>
				<dataTable value="#{GamesBean.filteredGames}" var="game">
					<column class="game-day time">
						<outputDate value="#{game.date}" format="#{ApplicationConstants.dayFormat}"/>
					</column>
					<column class="game-date time">
						<outputDate value="#{game.date}" format="#{ApplicationConstants.dateFormat}"/>
					</column>
					<column class="game-time time">
						<outputDate value="#{game.date}" format="#{ApplicationConstants.timeFormat}"/>
					</column>
					<column class="game-home-team">
						<renderLink view="club" value="#{game.homeTeamStr}" rendered="#{!game.homeTeam.club.lanaken}">
							<param value="#{game.homeTeam.clubId}"/>
						</renderLink>
						<outputText value="#{game.homeTeamStr}" class="bold" rendered="#{game.homeTeam.club.lanaken}"/>
					</column>
					<column class="game-home-team-pts">
						<outputText value="#{game.homeTeamPtsStr}"/>
					</column>
					<column class="game-dash">
						<outputText value="-"/>
					</column>
					<column class="game-out-team-pts">
						<outputText value="#{game.outTeamPtsStr}"/>
					</column>
					<column class="game-out-team">
						<renderLink view="club" value="#{game.outTeamStr}" rendered="#{!game.outTeam.club.lanaken}">
							<param value="#{game.outTeam.clubId}"/>
						</renderLink>
						<outputText value="#{game.outTeamStr}" class="bold" rendered="#{game.outTeam.club.lanaken}"/>
					</column>
					<column class="game-edit">
						<renderLink view="admin/games/edit" rendered="#{LoginBean.gameManager}">
							<param value="#{game.gameId}"/>
							<param value="#{GamesBean.currentUrl}"/>
							<img alt="Aanpassen" src="edit.png" tooltip="Aanpassen"/>
						</renderLink>
					</column>
				</dataTable>
			</div>
		</div>
	</define>
	<define name="side">
		<div>
			<h2>Wedstrijdverslagen</h2>
			<div>
				<dataTable value="#{GamesBean.reviewed}" var="game">
					<column class="game-time time">
						<outputDate value="#{game.date}" format="#{ApplicationConstants.smallDateFormat}"/>
					</column>
					<column>
						<column>
							<renderLink view="game" value="#{game.reviewTeamStr}">
								<param value="#{game.gameId}"/>
							</renderLink>
						</column>
					</column>
				</dataTable>
			</div>
		</div>
	</define>
</composition>
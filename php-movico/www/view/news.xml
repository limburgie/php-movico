<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main" title="Nieuws" description="Het laatste nieuws omtrent de club en zijn leden.">
	<define name="body">
		<panelSeries value="#{NewsItemBean.items}" var="item">
			<panelGroup>
				<h2><outputText value="#{item.title}"/></h2>
				<div>
					<div class="news-content">
						<outputDiv value="#{item.content}"/>
					</div>
					<div class="news-metadata">
						<p>
							<outputText value="#{item.creator.firstName}, "/>
							<outputDate value="#{item.date}" format="#{ApplicationConstants.dateFormat}"/>
						</p>
					</div>
				</div>
			</panelGroup>
		</panelSeries>
	</define>
	<define name="side">
		<div>
			<h2>Laatste Nieuws</h2>
			<div>
				<dataTable value="#{NewsItemBean.items}" var="item">
					<column class="time">
						<outputDate value="#{item.date}" format="#{ApplicationConstants.smallDateFormat}"/>
					</column>
					<column class="news-title">
						<renderLink view="news" value="#{item.shortTitle}">
							<param value="#{item.itemId}"/>
						</renderLink>
					</column>
				</dataTable>
			</div>
		</div>
	</define>
</composition>
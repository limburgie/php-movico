<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main">
	<define name="body">
		<panelSeries value="#{NewsItemBean.items}" var="item">
			<panelGroup>
				<h2><outputText value="#{item.title}"/></h2>
				<div>
					<div class="news-content">
						<outputDiv value="#{item.content}"/>
					</div>
					<div class="news-metadata">
						<p>
							<outputText value="#{item.creator.firstName}, "/>
							<outputDate value="#{item.date}" format="#{ApplicationConstants.dateFormat}"/>
						</p>
					</div>
				</div>
			</panelGroup>
		</panelSeries>
	</define>
</composition>
<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main">
	<define name="title">
		<outputText value="Boggle - Multiplayer"/>
	</define>
	<define name="body">
		<form>
			<message/>
			<p>Choose a room or start a new game</p>
			<dataTable value="#{BoggleBean.rooms}" var="room">
				<column>
					<colHeader>
						<outputText value="Room name"/>
					</colHeader>
					<outputText value="#{room.name}"/>
				</column>
				<column>
					<colHeader>
						<outputText value="Players"/>
					</colHeader>
					<outputText value="#{room.playersStr}"/>
				</column>
				<column>
					<commandLink action="#{BoggleBean.joinRoom}" value="Join"/>
				</column>
			</dataTable>
			<commandButton action="#{BoggleBean.createGame}" value="Create New Game"/>
		</form>
	</define>
</composition>
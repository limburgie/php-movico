<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main">
	<define name="title">
		<outputText value="Boggle - Room"/>
	</define>
	<define name="body">
		<form>
			<message/>
			<p><outputText value="Room #{BoggleBean.gameId}"/></p>
			<dataTable value="#{BoggleRoomBean.players}" var="player">
				<column>
					<colHeader>
						<outputText value="Player"/>
					</colHeader>
					<outputText value="#{player.name}"/>
				</column>
			</dataTable>
			<commandButton action="#{BoggleRoomBean.startGame}" value="Start Game"/>
			<commandButton action="#{BoggleRoomBean.leaveGame}" value="Leave Game"/>
		</form>
	</define>
</composition>
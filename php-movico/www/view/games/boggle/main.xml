<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main">
	<define name="title">
		<outputText value="Boggle - Main"/>
	</define>
	<define name="body">
		<form>
			<p>
				<span>Please enter your name:</span>
				<inputText value="#{BoggleBean.name}" autoFocus="true"/>
			</p>
			<ul>
				<li><commandLink action="#{BoggleBean.start}" value="Single Player"/></li>
				<li><commandLink action="games/boggle/rooms" value="Multi Player"/></li>
			</ul>
		</form>
	</define>
</composition>
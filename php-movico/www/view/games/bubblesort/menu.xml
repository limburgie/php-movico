<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main">
	<define name="title">
		<outputText value="Bubble Sort - Main Menu"/>
	</define>
	<define name="body">
		<form>
			<p>
				<outputLabel for="name" value="Name: "/> 
				<inputText id="name" value="#{BubbleSortBean.name}" autoFocus="true"/>

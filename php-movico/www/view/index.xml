<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main">
	<define name="body">
		<div>
			<h2>Laatste Nieuws</h2>
			<div>
				De website is online!!
				<!-- 
				<table id="news">
					<tr><td>2 jun</td><td>Nieuwjaarsreceptie!</td><td>door Peter</td></tr>
					<tr><td>17 maa</td><td>Blabla</td><td>door Michael</td></tr>
				</table>
				 -->
			</div>
		</div>
		<div>
			<h2>Aankomende wedstrijden</h2>
			<div>
				<dataTable id="upcoming-games" value="#{HomeBean.upcoming}" var="game">
					<column>
						<colHeader>
							<outputText value="Dag"/>
						</colHeader>
						<outputDate value="#{game.date}" format="%a"/>
					</column>
					<column>
						<colHeader>
							<outputText value="Datum"/>
						</colHeader>
						<outputDate value="#{game.date}" format="%d/%m/%Y"/>
					</column>
					<column>
						<colHeader>
							<outputText value="Uur"/>
						</colHeader>
						<outputDate value="#{game.date}" format="%H.%M"/>
					</column>
					<column>
						<colHeader>
							<outputText value="Thuisploeg"/>
						</colHeader>
						<outputText value="#{game.homeTeamStr}"/>
					</column>
					<column>
						<colHeader>
							<outputText value="Uitploeg"/>
						</colHeader>
						<outputText value="#{game.outTeamStr}"/>
					</column>
				</dataTable>
			</div>
		</div>
		<div>
			<h2>Afgelopen wedstrijden</h2>
			<div>
				<dataTable id="past-games" value="#{HomeBean.past}" var="game">
					<column>
						<colHeader>
							<outputText value="Dag"/>
						</colHeader>
						<outputDate value="#{game.date}" format="%a"/>
					</column>
					<column>
						<colHeader>
							<outputText value="Datum"/>
						</colHeader>
						<outputDate value="#{game.date}" format="%d/%m/%Y"/>
					</column>
					<column>
						<colHeader>
							<outputText value="Uur"/>
						</colHeader>
						<outputDate value="#{game.date}" format="%H.%M"/>
					</column>
					<column>
						<colHeader>
							<outputText value="Thuisploeg"/>
						</colHeader>
						<outputText value="#{game.homeTeamStr}"/>
					</column>
					<column>
						<outputText value="#{game.homeTeamPts}"/>
					</column>
					<column>
						<outputText value="-"/>
					</column>
					<column>
						<outputText value="#{game.outTeamPts}"/>
					</column>
					<column>
						<colHeader>
							<outputText value="Uitploeg"/>
						</colHeader>
						<outputText value="#{game.outTeamStr}"/>
					</column>
					<column>
						<img rendered="#{game.hasReview}" src="report.png" popup="#{game.review}"/>
					</column>
					<column>
						<img src="car.png"/>
					</column>
				</dataTable>
			</div>
		</div>
	</define>
</composition>
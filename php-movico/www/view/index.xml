<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<view title="Wenslijstjes">
	<css src="styles.css"/>
	<h1>Kerstlijstjes Mesotten</h1>
	<div id="wrapper">
		<div class="left">
			<img src="tree.png" alt="Kerstboom"/>
		</div>
		<div class="left">
			<form>
				<panelGroup rendered="#{!XmasBean.listVisible}">
					<h2>Wiens lijstje wil je zien?</h2>
				</panelGroup>
				<selectOneMenu options="#{XmasBean.names}" value="#{XmasBean.name}" addEmptyOption="true" action="#{XmasBean.showList}"/>
				<message/>
				<panelGroup rendered="#{XmasBean.listVisible}">
					<outputText value="Laatst bijgewerkt op "/>
					<outputDate value="#{XmasBean.wishList.updateDate}"/>
					<p><inputTextArea value="#{XmasBean.wishList.list}"/></p>
					<p><commandButton action="#{XmasBean.saveList}" value="Opslaan"/></p>
				</panelGroup>
			</form>
		</div>
		<div class="clear"/>
	</div>
</view>
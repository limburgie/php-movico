<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "http://php-movico.googlecode.com/svn/trunk/php-movico/lib/component/dtd/view.dtd">
<composition template="main">
	<define name="body">
		<div>
			<h2>Laatste Nieuws</h2>
			<div>
				<dataTable value="#{ManageNewsBean.items}" var="item">
					<column class="news-date time">
						<outputDate value="#{item.date}" format="#{ApplicationConstants.dateFormat}"/>
					</column>
					<column class="news-title">
						<renderLink view="news" value="#{item.title}">
							<param value="#{item.itemId}"/>
						</renderLink>
					</column>
					<column class="news-creator">
						<outputText value="#{item.creator.emailAddress}"/>
					</column>
				</dataTable>
			</div>
		</div>
		<div>
			<h2>Aankomende wedstrijden</h2>
			<div>
				<form>
					<dataTable value="#{GamesBean.upcoming}" var="game">
						<column class="game-day time">
							<outputDate value="#{game.date}" format="#{ApplicationConstants.dayFormat}"/>
						</column>
						<column class="game-date time">
							<outputDate value="#{game.date}" format="#{ApplicationConstants.dateFormat}"/>
						</column>
						<column class="game-time time">
							<outputDate value="#{game.date}" format="#{ApplicationConstants.timeFormat}"/>
						</column>
						<column class="game-home-team">
							<renderLink view="club_details" value="#{game.homeTeamStr}" rendered="#{!game.homeTeam.club.lanaken}">
								<param value="#{game.homeTeam.clubId}"/>
							</renderLink>
							<renderLink view="games" value="#{game.homeTeamStr}" rendered="#{game.homeTeam.club.lanaken}" class="bold">
								<param value="-"/>
								<param value="#{game.homeTeam.teamId}"/>
							</renderLink>
						</column>
						<column class="game-home-team-pts"><span></span></column>
						<column class="game-dash">
							<outputText value="-"/>
						</column>
						<column class="game-out-team-pts"><span></span></column>
						<column class="game-out-team">
							<renderLink view="club_details" value="#{game.outTeamStr}" rendered="#{!game.outTeam.club.lanaken}">
								<param value="#{game.outTeam.clubId}"/>
							</renderLink>
							<renderLink view="games" value="#{game.outTeamStr}" rendered="#{game.outTeam.club.lanaken}" class="bold">
								<param value="-"/>
								<param value="#{game.outTeam.teamId}"/>
							</renderLink>
						</column>
						<column class="game-review"><span></span></column>
						<column class="game-travel"><span></span></column>
					</dataTable>
				</form>
			</div>
		</div>
		<div>
			<h2>Afgelopen wedstrijden</h2>
			<div>
				<form>
					<dataTable value="#{GamesBean.past}" var="game">
						<column class="game-day">
							<outputDate value="#{game.date}" format="#{ApplicationConstants.dayFormat}"/>
						</column>
						<column class="game-date">
							<outputDate value="#{game.date}" format="#{ApplicationConstants.dateFormat}"/>
						</column>
						<column class="game-time">
							<outputDate value="#{game.date}" format="#{ApplicationConstants.timeFormat}"/>
						</column>
						<column class="game-home-team">
							<outputText value="#{game.homeTeamStr}"/>
						</column>
						<column class="game-home-team-pts">
							<outputText value="#{game.homeTeamPts}"/>
						</column>
						<column class="game-dash">
							<outputText value="-"/>
						</column>
						<column class="game-out-team-pts">
							<outputText value="#{game.outTeamPts}"/>
						</column>
						<column class="game-out-team">
							<outputText value="#{game.outTeamStr}"/>
						</column>
						<column class="game-review">
							<img rendered="#{game.hasReview}" src="report.png" popup="#{game.review}"/>
						</column>
						<!-- 
						<column class="game-travel">
							<img src="car.png"/>
						</column>
						 -->
					</dataTable>
				</form>
			</div>
		</div>
	</define>
</composition>
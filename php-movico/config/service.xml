<?xml version="1.0"?>
<!DOCTYPE service-builder SYSTEM "../lib/servicebuilder/dtd/service.dtd">
<service-builder>
	<entity name="NewsItem">
		<column name="itemId" type="int" primary="true" auto-increment="true"/>
		<column name="date" type="Date"/>
		<column name="title" type="String" size="30"/>
		<column name="content" type="String" size="500"/>
		<column name="creatorId" type="int"/>
		<order>
			<order-column name="date" order-by="desc"/>
		</order>
	</entity>
	<entity name="PingpongPlayer">
		<column name="playerId" type="int" primary="true" auto-increment="true"/>
		<column name="firstName" type="String" size="20"/>
		<column name="lastName" type="String" size="30"/>
		<column name="street" type="String" size="70"/>
		<column name="place" type="String" size="30"/>
		<column name="memberNo" type="int"/>
		<column name="startYear" type="int"/>
		<column name="ranking" type="String" size="2"/>
		<column name="phone" type="String" size="20"/>
		<column name="emailAddress" type="String" size="30"/>
		<column name="password" type="String" size="20"/>
		<column name="recreation" type="boolean"/>
		<column name="active" type="boolean"/>
		<finder name="EmailAddress" unique="true">
			<finder-column name="emailAddress"/>
		</finder>
		<finder name="Active">
			<finder-column name="active"/>
		</finder>
		<order>
			<order-column name="ranking" order-by="asc"/>
			<order-column name="lastName" order-by="asc"/>
		</order>
	</entity>
	<entity name="PingpongClub">
		<column name="clubId" type="int" primary="true" auto-increment="true"/>
		<column name="number" type="String" size="3"/>
		<column name="shortName" type="String" size="20"/>
		<column name="name" type="String" size="30"/>
		<column name="building" type="String" size="30"/>
		<column name="street" type="String" size="70"/>
		<column name="place" type="String" size="30"/>
		<column name="distance" type="int"/>
		<column name="phone" type="String" size="20"/>
		<finder name="Name" unique="true">
			<finder-column name="name"/>
		</finder>
		<finder name="ShortName" unique="true">
			<finder-column name="shortName"/>
		</finder>
		<finder name="Number" unique="true">
			<finder-column name="number"/>
		</finder>
		<order>
			<order-column name="shortName" order-by="asc"/>
		</order>
	</entity>
	<entity name="PingpongTeam">
		<column name="teamId" type="int" primary="true" auto-increment="true"/>
		<column name="clubId" type="int"/>
		<column name="teamNo" type="String" size="1"/>
		<column name="recreation" type="boolean"/>
		<finder name="ClubAndTeam" unique="true">
			<finder-column name="clubId"/>
			<finder-column name="teamNo"/>
			<finder-column name="recreation"/>
		</finder>
		<finder name="Club">
			<finder-column name="clubId"/>
		</finder>
	</entity>
	<entity name="PingpongGame">
		<column name="gameId" type="int" primary="true" auto-increment="true"/>
		<column name="date" type="Date"/>
		<column name="homeTeamId" type="int"/>
		<column name="outTeamId" type="int"/>
		<column name="homeTeamPts" type="int"/>
		<column name="outTeamPts" type="int"/>
		<column name="review" type="String" size="500"/>
		<finder name="AfterDate">
			<finder-column name="date" comparator="&gt;"/>
		</finder>
		<finder name="BeforeDate">
			<finder-column name="date" comparator="&lt;"/>
			<order>
				<order-column name="date" order-by="desc"/>
			</order>
		</finder>
		<finder name="HomeTeam">
			<finder-column name="homeTeamId"/>
		</finder>
		<finder name="OutTeam">
			<finder-column name="outTeamId"/>
		</finder>
		<order>
			<order-column name="date" order-by="asc"/>
		</order>
	</entity>
</service-builder>